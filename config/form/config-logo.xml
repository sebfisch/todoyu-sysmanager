<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="action">?ext=sysmanager&amp;controller=config</attribute>
		<attribute name="name">logo</attribute>
		<attribute name="enctype">multipart/form-data</attribute>
		
	</attributes>
	<hiddenFields>
		<field name="MAX_FILE_SIZE" value="5000000" noWrap="true" noStorage="true" />
		<field name="action" noWrap="true" value="logo" />
	</hiddenFields>
	<fieldsets>
		
		<fieldset name="main">
			<legend>Left form column</legend>
			<class>main</class>
			<elements>

				<field type="upload" name="image">
					<label>sysmanager.config.selectlogo</label>
				</field>

			</elements>
		</fieldset>

		<fieldset name="buttons">
			<legend>Actions</legend>
			<class>buttons</class>
			<elements>

				<field type="saveButton" name="save">
					<onclick>Todoyu.Ext.sysmanager.Config.Logo.save(this.form)</onclick>
				</field>

			</elements>
		</fieldset>

	</fieldsets>
</form>