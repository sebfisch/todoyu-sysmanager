<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="action">?ext=user&amp;controller=usergroupeditor</attribute>
		<attribute name="name">usergroup</attribute>
	</attributes>
	<hiddenFields>
		<field name="id"></field>
	</hiddenFields>
	<fieldsets>
		<fieldset name="main">
			<legend>Main usergroup data</legend>
			<elements>

				<field type="textinput" name="title">
					<label>core.title</label>
					<required>1</required>
				</field>

				<field type="textarea" name="description">
					<label>core.description</label>
				</field>

				<field type="checkbox" name="is_active">
					<label>user.usergroup.attr.is_active</label>
				</field>

				<field type="databaseRelation" name="users">
					<label>user.usergroup.attr.users</label>
					<record>
						<form>ext/user/config/form/usergroup-user.xml</form>
						<url>
							<ext>user</ext>
							<controller>usergroupeditor</controller>
						</url>
						<label type="function">
							<function>TodoyuUserViewHelper::getUserLabel</function>
							<noLabel>Neuer Benutzer</noLabel>
						</label>
					</record>
				</field>

			</elements>
		</fieldset>

		<fieldset name="buttons">
			<legend>Action</legend>
			<class>buttons</class>
			<elements>
				<field type="saveButton" name="save">
					<onclick>Todoyu.Ext.user.UsergroupEditor.save(this.form)</onclick>
				</field>
				<field type="cancelButton" name="cancel">
					<onclick>Todoyu.Ext.user.UsergroupEditor.showList()</onclick>
				</field>
			</elements>
		</fieldset>

	</fieldsets>
</form>