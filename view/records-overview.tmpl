{$tabs}

<table width="650" border="0" cellspacing="0" cellpadding="0" class="list recordsoverview">
  <tr class="header">
    <th scope="col" class="icon">&nbsp;</th>
    <th scope="col" class="extension">Extension</th>
    <th scope="col" class="recordtype">Recordtype</th>
    <th scope="col" class="records">Records</th>
    <th scope="col" class="last actions">&nbsp;</th>
  </tr>
{foreach $extensions extKey extension}
	{foreach $extension.records type record}
  <tr class="{cycle values="odd,even"}">
  	<td class="icon"></td>
    <td class="extension">{$extension.title}</td>
    <td class="recordtype">{$record.title}</td>
    <td class="records">{$record.count} {Label sysmanager.records}</td>
    <td class="actions">
    	<div class="icon edit" onclick="Todoyu.Ext.sysmanager.RecordsOverview.showRecords('{$extKey}', '{$type}')"></div>
    </td>
  </tr>
	{/foreach}
{/foreach}
</table>



