{$tabs}
<table width="662" border="0" cellpadding="5" cellspacing="0" id="extlist">
<thead>
	<tr class="headerLine">
		<th scope="col" class="icon first"></th>
		<th scope="col" class="key">Ext-Key</th>
		<th scope="col" class="title">Title</th>
		<th scope="col" class="edit">Edit</th>
		<th scope="col" class="version">Version</th>
		<th scope="col" class="download">DL</th>
		<th scope="col" class="doc">Doc</th>
		<th scope="col" class="state last">State</th>
	</tr>
</thead>
<tbody>
{foreach $extensions extKey extInfo}
	<tr class="{cycle values="odd,even"}">
		<td class="icon">{if hasExtensionInfo($extKey)}<a href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'info')">{/if}{extIcon $extKey}{if hasExtensionInfo($extKey)}</a>{/if}</td>
		<td class="key">{if hasExtensionInfo($extKey)}<a href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'info')">{/if}{$extKey}{if hasExtensionInfo($extKey)}</a>{/if}</td>
		<td class="title">{$extInfo.title}</td>
		<td class="edit">
			<a href="javascript:void(0)" title="info"
	{if hasExtensionInfo($extKey)}
				onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'info')" class="icon info">
	{else}
				class="icon disabledinfo diabled">
	{/if}
			<span class="hidden">info<span></a>
			<a href="javascript:void(0)" title="config"
	{if hasRegisteredConfigurations($extKey)}
				onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'config')" class="icon config">
	{else}
				class="icon disabledconfig disabled">
	{/if}
			<span class="hidden">config<span></a>
			<a href="javascript:void(0)" title="rights"
	{if hasRightsConfiguration($extKey)}
				onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'rights')" class="icon rights">
	{else}
				class="icon disabledrights disabled">
	{/if}
			<span class="hidden">rights<span></a>
			<a href="javascript:void(0)" title="records"
	{if hasRecordRegistered($extKey)}
				onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'records')" class="icon records">
	{else}
				class="icon disabledrecords disabled">
	{/if}
			<span class="hidden">records<span></a>
		</td>
		<td class="version">{$extInfo.version}</td>
		<td class="download"><a title="download" class="icon download" href="javascript:void(0)"><span class="hidden">download</span></td>
		<td class="doc"><a title="doc" class="icon doc" href="javascript:void(0)"><span class="hidden">doc</span></a></td>
		<td class="state">{$extInfo.state}</td>
	</tr>
{/foreach}
</tbody>
</table>
