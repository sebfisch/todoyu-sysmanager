<div class="overflow">
	{Header(cat(extIcon($extKey) " " $ext.title " (" $extKey ")"))}

	<table class="extInfo" cellspacing="2" cellpadding="3">
		<tr class="odd">
			<th class="label" scope="row">{Label sysmanager.ext.title}</th>
			<td class="value">{$ext.title}</td>
		</tr>
		<tr class="even">
			<th scope="row">{Label sysmanager.ext.key}</th>
			<td>{$extKey}</td>
		</tr>
		<tr class="odd">
			<th scope="row">{Label sysmanager.ext.version}</th>
			<td>{$ext.version} / {$ext.state}</td>
		</tr>
		<tr class="even">
			<th scope="row">{Label core.description}</th>
			<td>{$ext.description}</td>
		</tr>
		<tr class="odd">
			<th scope="row">{Label sysmanager.ext.author}</th>
			<td>{if $ext.author.name}{$ext.author.name}, {/if} {$ext.author.company} ({$ext.author.email})</td>
		</tr>
		<tr class="even">
			<th scope="row">{Label sysmanager.ext.dependencies}</th>
			<td>{$ext.dependencies}</td>
		</tr>
		<tr class="odd">
			<th scope="row">{Label sysmanager.ext.conflicts}</th>
			<td>{$ext.conflicts}</td>
		</tr>
		<tr class="even">
			<th scope="row">{Label sysmanager.ext.status}</th>
			<td>{$ext.status}</td>
		</tr>
	</table>
</div>