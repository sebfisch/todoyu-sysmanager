Num Results: {$numResults}
<br />

{foreach $Extensions.Extension extension}
	<div class="extension">
		<div class="column image">
			<img src="{$extension.image}" width="120" height="90" border="0" />
		</div>
		<div class="column middle">
			<div class="title">{$extension.title}</div>
			<div class="description">{$extension.description}</div>
		</div>
		<div class="column right">
			<div class="rating">
				{for i 1 $extension.rating}* {/for}
			</div>
			<div class="buy">Free</div>
			<div class="downloads">{$extension.downloads} Downloads</div>
		</div>
		<div style="clear:both"></div>
	</div>
{/foreach}

<br clear="all" />