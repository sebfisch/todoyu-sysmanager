{$tabs}

<table class="list extlist">
  <tr class="header">
    <th scope="col" class="icon">&nbsp;</th>
    <th scope="col" class="extkey">Ext-Key</th>
    <th scope="col" class="title">Title</th>
    <th scope="col" class="edit">&nbsp;</th>
    <th scope="col" class="version">Version</th>
    <th scope="col" class="download">&nbsp;</th>
    <th scope="col" class="doc">&nbsp;</th>
    <th scope="col" class="status last">&nbsp;</th>
  </tr>

{foreach $extensions extKey extInfo}
  <tr class="{cycle values="odd,even"}">
  	<td class="icon"><a href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'info')">{extIcon $extKey}</a></td>
  	<td class="extkey">{$extKey}</td>
    <td class="title">{htmlencode $extInfo.title}</td>
    <td class="edit">
    	<a href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.uninstall('{$extKey}')" title="uninstall" class="uninstall">
    		<span class="hidden">uninstall<span>
    	</a>

		<a href="javascript:void(0)" title="info"
			{if hasExtensionInfo($extKey)}
				onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'info')"
				class="info">
			{else}
				class="info disabled">
			{/if}
			<span class="hidden">info<span>
		</a>

		<a href="javascript:void(0)" title="config"
			{if hasRegisteredConfigurations($extKey)}
				onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'config')"
				class="config">
			{else}
				class="config disabled">
			{/if}
			<span class="hidden">config<span>
		</a>

		<a href="javascript:void(0)" title="rights"
			{if hasRightsConfiguration($extKey)}
				onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'rights')"
				class="rights">
			{else}
				class="rights disabled">
			{/if}
			<span class="hidden">rights<span>
		</a>

		<a href="javascript:void(0)" title="records"
			{if hasRecordRegistered($extKey)}
				onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'records')"
				class="records">
			{else}
				class="records disabled">
			{/if}
			<span class="hidden">records<span>
		</a>
    </td>
    <td class="version">{$extInfo.version}</td>
	<td class="download"><a title="download" class="icon download" href="javascript:void(0)"><span class="hidden">download</span></td>
	<td class="doc"><a title="doc" class="icon doc" href="javascript:void(0)"><span class="hidden">doc</span></a></td>
	<td class="state">{$extInfo.state}</td>
  </tr>
{/foreach}

</table>