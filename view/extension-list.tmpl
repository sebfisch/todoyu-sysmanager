{block name="contentMessage"}
	This part is replaced by the contentMessage block
{/block}

{if sizeof($extensions)>0}
	<table class="list extlist">
		{include file="extension-list-header.tmpl"}

	{foreach $extensions extKey extInfo}
	  <tr class="{cycle values="odd,even"}{if !$extInfo} missing{/if}">
		<td class="icon"><a href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'info')">{extIcon $extKey}</a></td>
		<td class="extkey" title="{$extKey}"><div class="overflow">{$extKey}</div></td>
		<td class="title"><div class="overflow">{if $extInfo}{htmlencode Label(cat($extKey '.ext.ext.title'))}{else}{Label sysmanager.extension.missing}{/if}</div></td>

		{block name="edit"}
			This part is replaced by the edit block
		{/block}

		<td class="version">{$extInfo.version}</td>
		<td class="state">
			{if $extInfo}
				{ExtensionStatusIcon $extInfo.state}
			{/if}
		</td>
		<td class="download">
			{if $extInfo}
			<a title="{Label sysmanager.extension.download}" class="icon download" href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.download('{$extKey}')">
				<span class="hidden">{Label core.file.download}</span>
			</a>
			{/if}
		</td>
		<td class="doc">
			{if $extInfo}
			<a title="{Label sysmanager.extension.documentation}" class="icon doc" href="{$extInfo.urlDocumentation}" target="_blank">
				<span class="hidden">{Label sysmanager.extension.documentation}</span>
			</a>
			{/if}
		</td>
	  </tr>
	{/foreach}

	</table>
{else}
	{block name="noExtensions"}
		This block is replaced if there are no extensions to be listed
	{/block}
{/if}

