{$tabs}

{Title "LLL:sysmanager.ext.notInstalledExtensions"}

<div class="contentMessage importInfo">
	<div class="icon"></div>
	<div class="test">
		<ul>
			<li><a href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.Import.showUploadForm()">Import an extension from archive</a></li>
		</ul>
	</div>
</div>

<table class="list extlist">
{include file="extension-list-header.tmpl"}

{foreach $extensions extKey extInfo}
  <tr class="{cycle values="odd,even"}">
	<td class="icon"><a href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'info')">{extIcon $extKey}</a></td>
	<td class="extkey">{$extKey}</td>
	<td class="title">{htmlencode $extInfo.title}</td>
	<td class="edit">

		<a href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.Install.install('{$extKey}')" title="{Label sysmanager.ext.extension.installExtension}" class="install">
			<span class="hidden">install<span>
		</a>

		<a href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.remove('{$extKey}')" title="{Label sysmanager.ext.extension.remove}" class="remove">
			<span class="hidden">remove<span>
		</a>

		<a href="javascript:void(0)" title="{Label sysmanager.ext.extension.showInfo}"
			{if extMgr_hasExtInfo($extKey)}
				onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'info')" class="info">
			{else}
				class="info disabled">
			{/if}
			<span class="hidden">info<span>
		</a>

	</td>
	<td class="version">{$extInfo.version}</td>
	<td class="download">
		<a title="{Label sysmanager.ext.extension.download}" class="icon download" href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.download('{$extKey}')">
			<span class="hidden">{Label core.global.file.download}</span>
		</a>
	</td>
	<td class="doc">
		<a title="{Label sysmanager.ext.documentation}" class="icon doc" href="javascript:void(0)">
			<span class="hidden">{Label sysmanager.ext.documentation}</span>
		</a>
	</td>
	<td class="state">{$extInfo.state}</td>
  </tr>
{/foreach}

</table>