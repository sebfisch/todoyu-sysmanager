{extends "extension-list.tmpl"}

{block name="title"}{Title "LLL:sysmanager.ext.notInstalledExtensions"}{/block}

{block name="contentMessage"}
	{contentMessage label="sysmanager.extension.imported.info" class="importInfo"}
{/block}

{block name="edit"}
	<td class="edit">
		<a href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.Install.install('{$extKey}')" title="{Label sysmanager.extension.install}" class="install">
			<span class="hidden">install</span>
		</a>

		<a href="javascript:void(0)" onclick="Todoyu.Ext.sysmanager.Extensions.remove('{$extKey}')" title="{Label sysmanager.extension.remove}" class="remove">
			<span class="hidden">remove</span>
		</a>

		<a href="javascript:void(0)" title="{Label sysmanager.extension.showInfo}"
			{if extMgr_hasExtInfo($extKey)}
				onclick="Todoyu.Ext.sysmanager.Extensions.showTab('{$extKey}', 'info')" class="info">
			{else}
				class="info disabled">
			{/if}
			<span class="hidden">info</span>
		</a>
	</td>
{/block}

{block name="noExtensions"}
	<div class="contentMessage importInfo">
		<div class="icon"></div>
		All extensions on the server are already installed. You can import new extensions from the todoyu TER or upload an extension archive.
	</div>
{/block}

{block name=""}
	<div class="installAlternatives">
		{Button class="ter" label="Load extension from TER" onclick="Todoyu.Ext.sysmanager.Extensions.showTab('', 'search')"}
		{Button class="upload" label="Import an extension from archive" onclick="Todoyu.Ext.sysmanager.Extensions.Import.showUploadForm()"}
	</div>
{/block}